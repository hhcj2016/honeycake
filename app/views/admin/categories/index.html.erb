<div style="margin-bottom: 50px;">
    <%= link_to("New Category", new_admin_category_path, class: "btn btn-primary") %>
    <%= link_to("返回Admin选单", admin_products_path, class: "btn btn-primary") %>
</div>

<div class="col-md-6">

<table class="table table-bordered">
  <thead>
    <th>分类</th>
    <th>选项</th>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
     <tr>
      <td>
        <%= category.name %>
      </td>
      <td>
           <%= link_to("Edit", edit_admin_category_path(category), :class => "btn btn-xs btn-info") %>
           <%= link_to("Delete", admin_category_path(category), :class => "btn btn-xs btn-success",
                       method: :delete, data: { confirm: "Are you sure?"} )%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>
